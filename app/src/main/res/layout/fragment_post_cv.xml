<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_profile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cơ bản"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white_primary"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập họ tên đầy đủ"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Loại cần tìm việc"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tag"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spTag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Địa chỉ của bạn"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập vị trí"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mức lương mong muốn"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSalary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập tiếng việt"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Giới tính"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spGen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Bằng cấp cao nhất"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spQuality"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Kinh nghiệm"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spExp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả về bản thân"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:lines="5"
                android:padding="5dip"
                android:paddingLeft="10dip" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nơi bạn từng học"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEducationSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Đã thêm 1"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white_primary"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Bằng cấp cao nhất"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEducationQua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập bằng cấp cao nhất "
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Từ ngày"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEducationStartTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:textSize="16dp"
                android:hint="01.01.2001"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Đến ngày"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEducationEndTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:textSize="16dp"
                android:hint="01.01.2023"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nơi bạn theo học"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEducationSchool"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:hint="Nhập nơi bạn theo học vào đây"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEducationDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:lines="4"
                android:gravity="top"
                android:hint="Thông tin nơi bạn học"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btnEduAdd"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/brand_color"
                android:text="Thêm"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kinh nghiệm nơi bạn làm việc"
                android:layout_weight="1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWorkSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Đã thêm 1"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white_primary"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Vị trí"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtWorkLocate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập vị trí"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Từ ngày"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtWorkStartTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:textSize="16dp"
                android:hint="01.01.2001"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Đến ngày"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtWorkEndTime"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:textSize="16dp"
                android:hint="01.01.2023"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Công ty"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtWorkCompany"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:hint="Tên công ty"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtWorkDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:lines="4"
                android:gravity="top"
                android:hint="Thông tin công ty"
                android:textSize="16dp" />
            <Button
                android:id="@+id/btnWorkAdd"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/brand_color"
                android:text="Thêm"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPostCV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/brand_color"
            android:text="Thêm hồ sơ"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
