<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_profile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin tuyển dụng"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/white_primary"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vị trí tuyển dụng"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập họ tên đầy đủ"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Công ty"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCompany"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập họ tên công ty"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tag"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spTag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Địa chỉ của bạn"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập vị trí"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mức lương "
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtSalary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="Nhập mức lương"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Kinh nghiệm"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spExp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:padding="5dip"
                android:paddingLeft="10dip"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Hạn cuối ứng tuyển"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDeadline"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:hint="01.01.2001"
                android:paddingHorizontal="12dp"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả về công việc"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:lines="5"
                android:gravity="top"
                android:padding="5dip"
                android:paddingLeft="10dip" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Yêu cầu công việc"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtResponsive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:drawSelectorOnTop="true"
                android:lines="5"
                android:gravity="top"
                android:padding="5dip"
                android:paddingLeft="10dip" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Mô tả về lợi ích"
                android:textSize="14dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtBenefit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_round4_stroke"
                android:gravity="top"
                android:drawSelectorOnTop="true"
                android:lines="5"
                android:padding="5dip"
                android:paddingLeft="10dip" />

        </LinearLayout>

        <Button
            android:id="@+id/btnPostCV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/brand_color"
            android:text="Đăng tuyển"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
