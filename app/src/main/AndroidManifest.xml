<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kma.movies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MoviesApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_background_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name=".ui.home.ProfileEmployeeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.ListEmployeeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.HomeActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.details.CommentFragment"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.details.JobDetailsActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>